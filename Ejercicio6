#include <iostream>
using namespace std;

int main() {
    double datos[100]; 
    double promedios[100];
    int N; 
    int N_promedios = 0; // Contador de promedios calculados

    cout << "Ingrese la cantidad de elementos (N >= 3): ";
    cin >> N;

    if (N < 3 || N > 100) {
        cout << "Tamaño invalido o insuficiente para grupos de 3.\n";
        return 1; 
    }

    cout << "Ingrese los " << N << " elementos:\n";
    for (int i = 0; i < N; ++i) {
        cout << "Elemento [" << i << "]: ";
        cin >> datos[i];
    }
    
    // 1. Recorrer el arreglo con la ventana deslizante
    // El bucle debe ir hasta N - 2, porque i, i+1, i+2 necesitan ser válidos.
    // Si N=5, va hasta i=2. i=0, i=1, i=2.
    for (int i = 0; i <= N - 3; ++i) {
        // 2. Calcular la suma de los tres elementos de la ventana
        double suma = datos[i] + datos[i + 1] + datos[i + 2];
        
        double promedio = suma / 3.0;

        promedios[N_promedios] = promedio;
        N_promedios++;
    }

    cout << "\n--- Promedios de 3 Valores Consecutivos ---" << endl;
    for (int i = 0; i < N_promedios; ++i) {
        // Muestra el promedio P_i y los índices que lo formaron
        cout << "P" << i+1 << " = Promedio de datos[" << i << "], [" << i+1 << "], [" << i+2 << "] = " << promedios[i] << endl;
    }
    return 0;
}
