#include <iostream>
#include <vector>
using namespace std;

int main() {
    int tam;
    cout << "Cuantos elementos quieres en el vector? ";
    cin >> tam;
    
    vector<int> lista(tam);
    
    cout << "Ingresa los " << tam << " elementos:\n";
    for(int i = 0; i < tam; i++) {
        cout << "Elemento " << i+1 << ": ";
        cin >> lista[i];
    }
    
    // Mostrar original
    cout << "\nVector original: ";
    for(int x : lista) cout << x << " ";
    cout << endl;
    
    // Invertir en el mismo vector
    for(int i = 0; i < tam / 2; i++) {
        // Intercambio usando una variable temporal
        int temp = lista[i];
        lista[i] = lista[tam - 1 - i];
        lista[tam - 1 - i] = temp;
    }
    
    // Mostrar resultado
    cout << "Vector invertido: ";
    for(int x : lista) cout << x << " ";
    cout << endl;
    
    return 0;
}
