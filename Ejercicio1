#include <iostream>
using namespace std;

int main(){
    int numeros[100],n,i,mayor=0;
    
    cout<<"Digite el nÃºmero de elementos del arreglo: "; cin>>n;
    
    for(i=1; i<=n; i++){
        cout <<"\n DIGITE UN NUMERO: "; cin>>numeros[i];
        if(numeros[i] > mayor){
            mayor = numeros[i];
        }
    }
    cout <<"\n EL NUMERO MAYOR ES: "<<mayor<<endl;
    return 0;
}
