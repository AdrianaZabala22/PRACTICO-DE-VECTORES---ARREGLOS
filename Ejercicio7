#include <iostream>
#include <string>
using namespace std;

string numeroATexto(int n) {
    if (n < 1 || n > 20) {
        return "Fuera de rango (1-20)";
    }
    
    string unidades[] = {"", "UNO", "DOS", "TRES", "CUATRO", "CINCO", "SEIS", "SIETE", "OCHO", "NUEVE", "DIEZ", 
                         "ONCE", "DOCE", "TRECE", "CATORCE", "QUINCE", "DIECISEIS", "DIECISIETE", "DIECIOCHO", "DIECINUEVE", "VEINTE"};
    
    return unidades[n];
}

int main() {
    int num;
    cout << "Ingrese un numero entero (1 a 20): ";
    cin >> num;
    
    cout << "El numero es: " << numeroATexto(num) << endl;
    return 0;
}
